<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textoInicioPPal1"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:fontFamily="serif"
        android:text="Veces entradas a la Aplicación: 0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Camara"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="412dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/camara_img"
        android:text="Camara"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Galeria"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="412dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/galeria_img"
        android:text="Galería"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Sensores"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="168dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/sensores_img"
        android:text="Sensores"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ConexionAInternet"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ConexionAInternet"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="168dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/accinternet_img"
        android:text="Conexión a internet"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Sensores" />

</androidx.constraintlayout.widget.ConstraintLayout>